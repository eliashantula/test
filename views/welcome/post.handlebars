<div class="post">
	<h1>{{post.title}}</h1>
	<h3>{{post.content}}</h3>
    <form method="post" action="/reply" id={{post._id}}>
		<input type="hidden" value={{post._id}} name="id">
		<input type="comments" value="" name="comments">
		<input type="submit" value="Submit Reply">
	
	</form>
	<ul style="list-style-type: none">
			{{#each post.replies as |reply|}}

		<li>{{reply.content}}</li>

		<form method="post" action="/commentreply" id={{reply._id}}>
		<input type="hidden" value={{reply._id}} name="id">
		<input type="hidden" value={{../post._id}} name="postid">
		<input type="comments" value="" name="comments">
		<input type="submit" value="Submit Reply">
	</form>
		{{/each}}
	</ul>
</div>